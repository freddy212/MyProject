
@model MyProject.Models.Receipt

<h2>Here is your receipt</h2>
<div class="ReceiptInformation">
    @Html.Raw(Model.products)
    <br />
    <h3> Totalcost : @Model.totalPrice</h3>
    <br />
    <label for="name" class="col-md-2 control-label"> <b>Name</b></label>
    <h4 id="name">@Model.name</h4>
    <br />
    <label for="address" class="col-md-2 control-label"> <b>Address</b></label>
    <h4 id="address">@Model.address</h4>
    <br />
    <label for="city" class="col-md-2 control-label"> <b>City</b></label>
    <h4 id="city">@Model.city</h4>
    <br />  
</div>
